<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Web Automation Suite"
    parallel="tests"
    thread-count="2">

    <listeners>
        <listener class-name="com.framework.listeners.TestNGListener"/>
    </listeners>

    <parameter name="env" value="dev"/>

    <test name="OrangeHRM Chrome Tests">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="com.framework.web.tests.LoginTest"/>
            <class name="com.framework.web.tests.DashboardTest"/>
        </classes>
    </test>

    <test name="OrangeHRM Firefox Tests">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="com.framework.web.tests.LoginTest"/>
            <class name="com.framework.web.tests.DashboardTest"/>
        </classes>
    </test>

</suite>
